@{
    ViewBag.Title = "История сессий чатов";
}

<!-- Main bar -->
<div class="mainbar">
    <!-- Matter -->
    <div class="matter">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div id="objectTable" class="widget wblue">
                        <div class="widget-head">
                            <div class="pull-left">
                                <h1>История сессий чатов</h1>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <div class="row ">
                                <div class=" col-md-12">
                                    <div class="search-board">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Агенты: </label>
                                        <div class="col-md-10">
                                            <select id="selectAgentSelect"
                                                multiple="multiple" 
                                                data-bind="
                                                        options: agents, 
                                                        optionsText: 'fullName', 
                                                        optionsValue: 'skey', 
                                                        multiselect: {}, 
                                                        selectedOptions: agentsSelected" class="form-control">
                                            </select>
                                          </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Даты: </label>
                                        <div class="col-md-10">
                                            <input id="reportrange" class="date-input form-control"
                                                   data-bind="daterangepicker: dateRange, daterangepickerOptions: dateRangeOptions" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Текст:</label>
                                        <div class="col-md-10">
                                            <input data-bind="textInput: wordSearch" class="form-control"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button name="searchbtn" data-bind="click: startSearch" class="btn btn-primary ">Поиск</button>
                                    </div>
                                </div>
                                </div>
                                </div>
                            </div>
                            <div class="row sesion-history-area">
                                <div class="col-md-12">                                    
                                        <table class="table table-striped table-hover hidden-sm hidden-xs" data-bind="visible: sessions().length > 0">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Статус</th>
                                                <th>Is&nbsp;Offline</th>
                                                <th>Начата</th>
                                                <th>Ответ</th>
                                                <th>Завершено</th>
                                                <th>Создана</th>
                                                <th>Цель</th>
                                                <th>Агенты</th>
                                                <th>Сообщения (v/a)</th>
                                                <th>&nbsp;</th>
                                            </tr>
                                            </thead>
                                            <tbody data-bind="foreach: sessions">
                                            <tr>
                                                <td><strong data-bind="text: skey"></strong></td>
                                                <td data-bind="text: statusText"></td>
                                                <td data-bind="text: (isOffline ? 'Y' : 'N')"></td>
                                                <td data-bind="html: Dt.asHtml(addTimestamp)"></td>
                                                <td data-bind="html: Dt.asHtml(answerTimestamp())"></td>
                                                <td data-bind="html: Dt.asHtml(endTimestamp())"></td>
                                                <td data-bind="html: creatorHtml"></td>
                                                <td data-bind="html: targetHtml"></td>
                                                <td data-bind="html: agentsHtml"></td>
                                                <td data-bind="text: messageCountText"></td>
                                                <td><a data-bind="attr: { href: 'ChatSessionDetails?sid=' + skey }">Детализация</a></td>
                                            </tr>
                                            </tbody>
                                        </table>
                                        <div class="hidden-lg hidden-md">
                                            <div data-bind="visible: sessions().length > 0">
                                                <div data-bind="foreach: sessions">
                                                    <div class="row head-row">
                                                        <div class="col-sm-4 col-xs-4">Id</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="text: skey"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4">Status</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="text: statusText"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4">Is&nbsp;Offline</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="text: (isOffline ? 'Y' : 'N')"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4">Started</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="html: Dt.asHtml(addTimestamp)"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4">Answer</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="html: Dt.asHtml(answerTimestamp())"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4">Completed</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="html: Dt.asHtml(endTimestamp())"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4">Creator</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="html: creatorHtml"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4">Target</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="html: targetHtml"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4">Agents</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="html: agentsHtml"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4">Messages (v/a)</div>
                                                        <div class="col-sm-8 col-xs-8" data-bind="text: messageCountText"></div>
                                                   </div>
                                                   <div class="row">
                                                        <div class="col-sm-4 col-xs-4"></div>
                                                        <div class="col-sm-8 col-xs-8"><a data-bind="attr: { href: 'ChatSessionDetails?sid=' + skey }">Details</a>
                                                       </div>
                                                   </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                               
                            </div>
                            <div class="row">
                                <div class="col-md-12" style="text-align: center;">
                                    <button data-bind="visible: hasMoreSessions, click: loadMoreSessions" class="btn btn-default btn-raised">Load More</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts_include {
}

@section scripts{
    <script type="text/javascript">

        var currentUserId = @UserIdentity.GetUserId(User.Identity);

        require(['pages/ChatSessionHistory', 'Dt', 'bindings/daterangepicker'],
            function (app, dt)
            {
                window.Dt = dt.default;

                $(function () {
                    new app.default(currentUserId).run();
                });
            });
        
        $("#selectAgentSelect").multiselect({
             buttonWidth: '150px'
        });
        
        $(".show-details-tr .deleted").parent().addClass("changed-row");
        
    </script>
}